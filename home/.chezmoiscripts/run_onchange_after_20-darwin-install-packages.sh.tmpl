#!/usr/bin/env bash
{{ if and (not .devcontainer) (eq .chezmoi.os "darwin") -}}
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.taps -}}
tap {{ . | quote }}
{{ end -}}
{{ range .packages.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
{{ end -}}